pipeline {
    agent any

    stages {

        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/Rahul09123/MiniProject.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    sh '/usr/local/bin/docker build -t calculator .'
                }
            }
        }

        stage('Push Docker Image') {
        steps {
            script {
                sh '/usr/local/bin/docker login -u rahulraman -p $DOCKER_PASS'
                sh '/usr/local/bin/docker tag calculator rahulraman/calculator:latest'
                sh '/usr/local/bin/docker push rahulraman/calculator:latest'
            }
        }
    }

        stage('Run Ansible') {
            steps {
                script {
                    sh 'ansible-playbook deploy.yml'
                }
            }
        }

    }
}



