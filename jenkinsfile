pipeline {
    agent any

    stages {

        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/BThangaraju/MiniProject.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    sh '/opt/homebrew/bin/docker build -t calculator .'
                }
            }
        }

        stage('Push Docker Image') {
            steps {
                script {
                    sh '/opt/homebrew/bin/docker tag calculator rahulraman/calculator:latest'
                    sh '/opt/homebrew/bin/docker push rahulraman/calculator:latest'
                }
            }
        }

        stage('Run Ansible') {
            steps {
                script {
                    sh 'ansible-playbook deploy.yml'
                }
            }
        }

    }
}
